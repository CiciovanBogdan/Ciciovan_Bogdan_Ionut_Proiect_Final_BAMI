@model IEnumerable<Ciciovan_Bogdan_Ionut_HotelReservations.Models.RoomType>

@{
    ViewData["Title"] = "Room Types";
}

<div class="container-fluid mt-4">
    <h2>Room Types</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <!-- Search & Filter Section -->
    <div class="card mb-3 shadow-sm">
        <div class="card-body">
            <form asp-action="Index" method="get">
                @{
                    var currentCapacity = ViewData["CurrentCapacity"] as int?;
                }
                <div class="row g-3">
                    <!-- Search Box -->
                    <div class="col-md-4">
                        <input type="text"
                               name="searchString"
                               value="@ViewData["CurrentFilter"]"
                               class="form-control"
                               placeholder="Search by room type..." />
                    </div>

                    <!-- Capacity Filter -->
                    <div class="col-md-2">
                        <select name="capacityFilter" class="form-select">
                            <option value="">All Capacities</option>
                            @foreach (var capacity in ViewBag.CapacityList as List<int>)
                            {
                                <option value="@capacity"
                                        selected="@(capacity == currentCapacity)">
                                    @capacity person@(capacity != 1 ? "s" : "")
                                </option>
                            }
                        </select>
                    </div>

                    <!-- Min Price -->
                    <div class="col-md-2">
                        <input type="number"
                               name="minPrice"
                               value="@ViewData["CurrentMinPrice"]"
                               class="form-control"
                               placeholder="Min Price ($)"
                               step="0.01"
                               min="0" />
                    </div>

                    <!-- Max Price -->
                    <div class="col-md-2">
                        <input type="number"
                               name="maxPrice"
                               value="@ViewData["CurrentMaxPrice"]"
                               class="form-control"
                               placeholder="Max Price ($)"
                               step="0.01"
                               min="0" />
                    </div>

                    <!-- Filter Button -->
                    <div class="col-md-1">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-search"></i> Filter
                        </button>
                    </div>

                    <!-- Clear Button -->
                    <div class="col-md-1">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Clear
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["NameSortParm"]"
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           asp-route-capacityFilter="@ViewData["CurrentCapacity"]"
                           asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                           asp-route-maxPrice="@ViewData["CurrentMaxPrice"]"
                           class="text-white text-decoration-none">
                            Tip camera
                            @if (String.IsNullOrEmpty(ViewData["NameSortParm"]?.ToString()))
                            {
                                <i class="bi bi-arrow-up"></i>
                            }
                            else
                            {
                                <i class="bi bi-arrow-down"></i>
                            }
                        </a>
                    </th>
                    <th>Descriere</th>
                    <th>
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["CapacitySortParm"]"
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           asp-route-capacityFilter="@ViewData["CurrentCapacity"]"
                           asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                           asp-route-maxPrice="@ViewData["CurrentMaxPrice"]"
                           class="text-white text-decoration-none">
                            Capacitate maxima
                            @if (ViewData["CapacitySortParm"]?.ToString() == "capacity_desc")
                            {
                                <i class="bi bi-arrow-up"></i>
                            }
                            else if (ViewData["CapacitySortParm"]?.ToString() == "capacity")
                            {
                                <i class="bi bi-arrow-down"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["PriceSortParm"]"
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           asp-route-capacityFilter="@ViewData["CurrentCapacity"]"
                           asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                           asp-route-maxPrice="@ViewData["CurrentMaxPrice"]"
                           class="text-white text-decoration-none">
                            Pret de baza (per noapte)
                            @if (ViewData["PriceSortParm"]?.ToString() == "price_desc")
                            {
                                <i class="bi bi-arrow-up"></i>
                            }
                            else if (ViewData["PriceSortParm"]?.ToString() == "price")
                            {
                                <i class="bi bi-arrow-down"></i>
                            }
                        </a>
                    </th>
                    <th class="text-center">Activ?</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => item.RoomTypeName)</strong>
                        </td>
                        <td>@(item.Description ?? "-")</td>
                        <td>
                            <strong>@item.MaxOccupancy</strong>
                        </td>
                        <td>
                            <strong class="text-success">$@item.BasePrice.ToString("N2")</strong>
                        </td>
                        <td class="text-center">
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Yes
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-x-circle"></i> No
                                </span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.RoomTypeId" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.RoomTypeId" class="btn btn-info btn-sm">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.RoomTypeId" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>