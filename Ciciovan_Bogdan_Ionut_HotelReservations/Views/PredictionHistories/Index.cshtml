@model IEnumerable<Ciciovan_Bogdan_Ionut_HotelReservations.Models.PredictionHistory>

@{
    ViewData["Title"] = "Prediction History";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-clock-history"></i> Prediction History
        </h2>
    </div>

    <!-- Filter Form -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Customer Email</label>
                    <input type="text" name="searchEmail" class="form-control"
                           value="@ViewData["SearchEmail"]" placeholder="Search by email..." />
                </div>
                <div class="col-md-3">
                    <label class="form-label">From Date</label>
                    <input type="date" name="fromDate" class="form-control"
                           value="@(ViewData["FromDate"] != null ? ((DateTime)ViewData["FromDate"]).ToString("yyyy-MM-dd") : "")" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">To Date</label>
                    <input type="date" name="toDate" class="form-control"
                           value="@(ViewData["ToDate"] != null ? ((DateTime)ViewData["ToDate"]).ToString("yyyy-MM-dd") : "")" />
                </div>
                <div class="col-md-1 align-self-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel"></i> Filter
                    </button>
                </div>
                <div class="col-md-1 align-self-end">
                    <a asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Predictions Table -->
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Date/Time</th>
                            <th>Customer Email</th>
                            <th>Predicted Label</th>
                            <th>Probability</th>
                            <th>Risk Level</th>
                            <th>Recommendation</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>
                                        <span class="badge bg-info">@item.CustomerEmail</span>
                                    </td>
                                    <td>
                                        @if (item.PredictedLabel == "Canceled")
                                        {
                                            <span class="badge bg-danger">@item.PredictedLabel</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@item.PredictedLabel</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="progress" style="height: 20px; width: 100px;">
                                            <div class="progress-bar @(item.Probability > 0.1 ? "bg-danger" : item.Probability > 0.03 ? "bg-warning" : "bg-success")"
                                                 role="progressbar"
                                                 style="width: @(item.Probability * 100)%">
                                                @(item.Probability.ToString("P1"))
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (item.RiskLevel.Contains("High"))
                                        {
                                            <span class="badge bg-danger">@item.RiskLevel</span>
                                        }
                                        else if (item.RiskLevel.Contains("Medium"))
                                        {
                                            <span class="badge bg-warning text-dark">@item.RiskLevel</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">@item.RiskLevel</span>
                                        }
                                    </td>
                                    <td>
                                        <small>@(item.Recommendation.Length > 50 ? item.Recommendation.Substring(0, 50) + "..." : item.Recommendation)</small>
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted">
                                    <i class="bi bi-inbox"></i> No prediction history found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <p class="text-muted">
            <i class="bi bi-info-circle"></i>
            Total predictions: <strong>@Model.Count()</strong>
        </p>
    </div>
</div>