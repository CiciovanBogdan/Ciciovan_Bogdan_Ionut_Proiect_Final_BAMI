@model Ciciovan_Bogdan_Ionut_HotelReservations.Models.Booking

@{
    ViewData["Title"] = "Edit Booking";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Edit Booking
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="BookingId" />
                        <input type="hidden" asp-for="BookingCode" />
                        <input type="hidden" asp-for="CreatedDate" />

                        <!-- Booking Code Display -->
                        <div class="alert alert-info mb-4">
                            <strong>Booking Code:</strong> @Model.BookingCode
                        </div>

                        <!-- Customer & Room Type -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="CustomerId" class="form-label">Customer</label>
                                <select asp-for="CustomerId" class="form-select" asp-items="ViewBag.CustomerId">
                                    <option value="">-- Select Customer --</option>
                                </select>
                                <span asp-validation-for="CustomerId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="RoomTypeId" class="form-label">Room Type</label>
                                <select asp-for="RoomTypeId" class="form-select" asp-items="ViewBag.RoomTypeId">
                                    <option value="">-- Select Room Type --</option>
                                </select>
                                <span asp-validation-for="RoomTypeId" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Meal Plan & Arrival Date -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="MealPlanId" class="form-label">Meal Plan</label>
                                <select asp-for="MealPlanId" class="form-select" asp-items="ViewBag.MealPlanId">
                                    <option value="">-- Select Meal Plan --</option>
                                </select>
                                <span asp-validation-for="MealPlanId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ArrivalDate" class="form-label">Arrival Date</label>
                                <input asp-for="ArrivalDate" type="date" class="form-control" />
                                <span asp-validation-for="ArrivalDate" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Nights -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="NoOfWeekendNights" class="form-label">Weekend Nights</label>
                                <input asp-for="NoOfWeekendNights" type="number" class="form-control" min="0" max="30" />
                                <span asp-validation-for="NoOfWeekendNights" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NoOfWeekNights" class="form-label">Week Nights</label>
                                <input asp-for="NoOfWeekNights" type="number" class="form-control" min="0" max="30" />
                                <span asp-validation-for="NoOfWeekNights" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Guests -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="NoOfAdults" class="form-label">Number of Adults</label>
                                <input asp-for="NoOfAdults" type="number" class="form-control" min="1" max="10" />
                                <span asp-validation-for="NoOfAdults" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NoOfChildren" class="form-label">Number of Children</label>
                                <input asp-for="NoOfChildren" type="number" class="form-control" min="0" max="10" />
                                <span asp-validation-for="NoOfChildren" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Special Requests & Parking -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="NoOfSpecialRequests" class="form-label">Special Requests</label>
                                <input asp-for="NoOfSpecialRequests" type="number" class="form-control" min="0" max="10" />
                                <span asp-validation-for="NoOfSpecialRequests" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="AvgPricePerRoom" class="form-label">Average Price Per Room ($)</label>
                                <input asp-for="AvgPricePerRoom" type="number" step="0.01" class="form-control" min="0" />
                                <span asp-validation-for="AvgPricePerRoom" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Parking Checkbox -->
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-check">
                                    <input asp-for="RequiredCarParking" type="checkbox" class="form-check-input" />
                                    <label asp-for="RequiredCarParking" class="form-check-label">
                                        Required Car Parking
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Lead Time & Market Segment -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="LeadTime" class="form-label">Lead Time (days)</label>
                                <input asp-for="LeadTime" type="number" class="form-control" min="0" max="365" />
                                <span asp-validation-for="LeadTime" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="MarketSegmentType" class="form-label">Market Segment</label>
                                <select asp-for="MarketSegmentType" class="form-select" asp-items="ViewBag.MarketSegmentTypes">
                                    <option value="">-- Select Segment --</option>
                                </select>
                                <span asp-validation-for="MarketSegmentType" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Booking Status -->
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <label asp-for="BookingStatus" class="form-label">Booking Status</label>
                                <select asp-for="BookingStatus" class="form-select" asp-items="ViewBag.BookingStatuses">
                                    <option value="">-- Select Status --</option>
                                </select>
                                <span asp-validation-for="BookingStatus" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}