@model Ciciovan_Bogdan_Ionut_HotelReservations.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h1>Create Booking</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-12 mb-3">
                    <label asp-for="CustomerId" class="form-label">Customer</label>
                    <select asp-for="CustomerId" class="form-select" asp-items="ViewBag.CustomerId">
                        <option value="">-- Select Customer --</option>
                    </select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="RoomTypeId" class="form-label">Room Type</label>
                    <select asp-for="RoomTypeId" class="form-select" asp-items="ViewBag.RoomTypeId">
                        <option value="">-- Select Room Type --</option>
                    </select>
                    <span asp-validation-for="RoomTypeId" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="MealPlanId" class="form-label">Meal Plan</label>
                    <select asp-for="MealPlanId" class="form-select" asp-items="ViewBag.MealPlanId">
                        <option value="">-- Select Meal Plan --</option>
                    </select>
                    <span asp-validation-for="MealPlanId" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="ArrivalDate" class="form-label"></label>
                    <input asp-for="ArrivalDate" class="form-control" type="date" />
                    <span asp-validation-for="ArrivalDate" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="NoOfWeekendNights" class="form-label"></label>
                    <input asp-for="NoOfWeekendNights" class="form-control" type="number" min="0" />
                    <span asp-validation-for="NoOfWeekendNights" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="NoOfWeekNights" class="form-label"></label>
                    <input asp-for="NoOfWeekNights" class="form-control" type="number" min="0" />
                    <span asp-validation-for="NoOfWeekNights" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="NoOfAdults" class="form-label"></label>
                    <input asp-for="NoOfAdults" class="form-control" type="number" min="1" />
                    <span asp-validation-for="NoOfAdults" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="NoOfChildren" class="form-label"></label>
                    <input asp-for="NoOfChildren" class="form-control" type="number" min="0" />
                    <span asp-validation-for="NoOfChildren" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="LeadTime" class="form-label"></label>
                    <input asp-for="LeadTime" class="form-control" type="number" min="0" />
                    <span asp-validation-for="LeadTime" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="NoOfSpecialRequests" class="form-label"></label>
                    <input asp-for="NoOfSpecialRequests" class="form-control" type="number" min="0" />
                    <span asp-validation-for="NoOfSpecialRequests" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="MarketSegmentType" class="form-label"></label>
                    <select asp-for="MarketSegmentType" class="form-select" asp-items="ViewBag.MarketSegmentTypes">
                        <option value="">-- Select Segment --</option>
                    </select>
                    <span asp-validation-for="MarketSegmentType" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="BookingStatus" class="form-label"></label>
                    <select asp-for="BookingStatus" class="form-select" asp-items="ViewBag.BookingStatuses">
                        <option value="">-- Select Status --</option>
                    </select>
                    <span asp-validation-for="BookingStatus" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="RequiredCarParking" class="form-check-input" type="checkbox" />
                <label asp-for="RequiredCarParking" class="form-check-label"></label>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}