@model Ciciovan_Bogdan_Ionut_HotelReservations.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<div class="container mt-4">
    <h2>Booking Details</h2>
    <h4>@Model.BookingCode</h4>

    <div class="row">
        <div class="col-md-8">
            <!-- Existing booking details -->
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5>Booking Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Booking Code</dt>
                        <dd class="col-sm-8">@Model.BookingCode</dd>

                        <dt class="col-sm-4">Customer</dt>
                        <dd class="col-sm-8">@Model.Customer.FirstName @Model.Customer.LastName</dd>

                        <dt class="col-sm-4">Room Type</dt>
                        <dd class="col-sm-8">@Model.RoomType.RoomTypeName</dd>

                        <dt class="col-sm-4">Meal Plan</dt>
                        <dd class="col-sm-8">@(Model.MealPlan?.PlanName ?? "Not Selected")</dd>

                        <dt class="col-sm-4">Arrival Date</dt>
                        <dd class="col-sm-8">@Model.ArrivalDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Checkout Date</dt>
                        <dd class="col-sm-8">@Model.CheckOutDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Total Nights</dt>
                        <dd class="col-sm-8">@Model.TotalNights (@Model.NoOfWeekendNights weekend, @Model.NoOfWeekNights week)</dd>

                        <dt class="col-sm-4">Guests</dt>
                        <dd class="col-sm-8">@Model.TotalGuests (@Model.NoOfAdults adults, @Model.NoOfChildren children)</dd>

                        <dt class="col-sm-4">Special Requests</dt>
                        <dd class="col-sm-8">@Model.NoOfSpecialRequests</dd>

                        <dt class="col-sm-4">Car Parking</dt>
                        <dd class="col-sm-8">
                            @if (Model.RequiredCarParking)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.BookingStatus == "Confirmed" ? "success" : Model.BookingStatus == "Canceled" ? "danger" : Model.BookingStatus == "Completed" ? "info" : "warning")">
                                @Model.BookingStatus
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Price Breakdown Card -->
        <div class="col-md-4">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-receipt"></i> Price Breakdown
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-8">Room Cost</dt>
                        <dd class="col-4 text-end">$@Model.RoomCost.ToString("N2")</dd>
                        <dd class="col-12 text-muted small">
                            $@Model.AvgPricePerRoom × @Model.TotalNights nights
                        </dd>

                        @if (Model.MealPlan != null && Model.MealPlanId.HasValue)
                        {
                            <dt class="col-8">Meal Plan</dt>
                            <dd class="col-4 text-end">$@Model.MealCost.ToString("N2")</dd>
                            <dd class="col-12 text-muted small">
                                $@Model.MealPlan.PricePerPerson × @Model.TotalGuests guests × @Model.TotalNights nights
                            </dd>
                        }

                        @if (Model.NoOfSpecialRequests > 0)
                        {
                            <dt class="col-8">Special Requests</dt>
                            <dd class="col-4 text-end">$@Model.SpecialRequestsCost.ToString("N2")</dd>
                            <dd class="col-12 text-muted small">
                                $10.00 × @Model.NoOfSpecialRequests requests
                            </dd>
                        }

                        @if (Model.RequiredCarParking)
                        {
                            <dt class="col-8">Car Parking</dt>
                            <dd class="col-4 text-end">$@Model.ParkingCost.ToString("N2")</dd>
                            <dd class="col-12 text-muted small">
                                Flat rate
                            </dd>
                        }

                        <hr class="my-2" />

                        <dt class="col-8 h5">Total Price</dt>
                        <dd class="col-4 text-end h5 text-success">
                            <strong>$@Model.TotalPrice.ToString("N2")</strong>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="card mt-3 bg-light">
                <div class="card-body">
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i>
                        <strong>Pricing Policy:</strong><br>
                        • Room: Base price per night<br>
                        • Meals: Per person per night<br>
                        • Special Requests: $10 each<br>
                        • Parking: $50 flat rate
                    </small>
                </div>
            </div>
        </div>

        <!-- Booking History Card -->
        <div class="col-md-12 mt-4">
            <div class="card shadow border-0">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history"></i> Booking History
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.BookingHistories != null && Model.BookingHistories.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Change Type</th>
                                        <th>Description</th>
                                        <th>Old Status</th>
                                        <th>New Status</th>
                                        <th>Changed By</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var history in Model.BookingHistories.OrderByDescending(h => h.ChangedDate))
                                    {
                                        <tr>
                                            <td>
                                                <small>@history.ChangedDate.ToString("dd/MM/yyyy HH:mm")</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-@(history.ChangeType == "Created" ? "success" : "warning")">
                                                    @history.ChangeType
                                                </span>
                                            </td>
                                            <td>@history.ChangeDescription</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(history.OldStatus))
                                                {
                                                    <span class="badge bg-secondary">@history.OldStatus</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(history.NewStatus))
                                                {
                                                    <span class="badge bg-@(history.NewStatus == "Confirmed" ? "success" : history.NewStatus == "Canceled" ? "danger" : history.NewStatus == "Completed" ? "info" : "warning")">
                                                        @history.NewStatus
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    <i class="bi bi-person"></i> @history.ChangedByUser
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">
                            <i class="bi bi-info-circle"></i> No history available for this booking.
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.BookingId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>