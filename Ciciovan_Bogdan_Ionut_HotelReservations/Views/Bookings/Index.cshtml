@model IEnumerable<Ciciovan_Bogdan_Ionut_HotelReservations.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h1>Bookings</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Booking</a>
</p>

<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-3">
        <div class="col-md-3">
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search by code, customer..." />
        </div>
        <div class="col-md-2">
            <select name="statusFilter" class="form-select" asp-items="ViewBag.StatusList">
                <option value="">All Statuses</option>
            </select>
        </div>
        <div class="col-md-3">
            <select name="roomTypeFilter" class="form-select" asp-items="ViewBag.RoomTypeList">
                <option value="">All Room Types</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-success w-100">Filter</button>
        </div>
        <div class="col-md-2">
            <a asp-action="Index" class="btn btn-secondary w-100">Clear</a>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["BookingCodeSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-statusFilter="@ViewData["CurrentStatus"]" asp-route-roomTypeFilter="@ViewData["CurrentRoomType"]">
                        Booking Code
                    </a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["CustomerSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-statusFilter="@ViewData["CurrentStatus"]" asp-route-roomTypeFilter="@ViewData["CurrentRoomType"]">
                        Customer
                    </a>
                </th>
                <th>Room Type</th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-statusFilter="@ViewData["CurrentStatus"]" asp-route-roomTypeFilter="@ViewData["CurrentRoomType"]">
                        Arrival Date
                    </a>
                </th>
                <th>Nights</th>
                <th>Guests</th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-statusFilter="@ViewData["CurrentStatus"]" asp-route-roomTypeFilter="@ViewData["CurrentRoomType"]">
                        Avg Price
                    </a>
                </th>
                <th>Total Price</th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["StatusSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-statusFilter="@ViewData["CurrentStatus"]" asp-route-roomTypeFilter="@ViewData["CurrentRoomType"]">
                        Status
                    </a>
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.BookingCode)</td>
                    <td>@Html.DisplayFor(modelItem => item.Customer.FirstName) @Html.DisplayFor(modelItem => item.Customer.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.RoomType.RoomTypeName)</td>
                    <td>@Html.DisplayFor(modelItem => item.ArrivalDate)</td>
                    <td>@(item.NoOfWeekendNights + item.NoOfWeekNights)</td>
                    <td>@item.NoOfAdults A, @item.NoOfChildren C</td>
                    <td>@Html.DisplayFor(modelItem => item.AvgPricePerRoom)</td>
                    <td>@item.TotalPrice.ToString("C")</td>
                    <td>
                        @if (item.BookingStatus == "Confirmed")
                        {
                            <span class="badge bg-success">@item.BookingStatus</span>
                        }
                        else if (item.BookingStatus == "Canceled")
                        {
                            <span class="badge bg-danger">@item.BookingStatus</span>
                        }
                        else if (item.BookingStatus == "Pending")
                        {
                            <span class="badge bg-warning text-dark">@item.BookingStatus</span>
                        }
                        else
                        {
                            <span class="badge bg-info">@item.BookingStatus</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>