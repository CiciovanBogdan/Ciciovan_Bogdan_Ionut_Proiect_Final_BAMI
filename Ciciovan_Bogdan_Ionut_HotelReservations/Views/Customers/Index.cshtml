@model IEnumerable<Ciciovan_Bogdan_Ionut_HotelReservations.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<div class="container-fluid mt-4">
    <h2>Customers</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <!-- Search & Filter Section -->
    <div class="card mb-3 shadow-sm">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-10">
                    <input type="text" 
                           name="searchString" 
                           value="@ViewData["CurrentFilter"]" 
                           class="form-control" 
                           placeholder="Search by name, email..." />
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-search"></i> Filter
                    </button>
                </div>
                <div class="col-md-1">
                    <a asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>
                        <a asp-action="Index" 
                           asp-route-sortOrder="@ViewData["FirstNameSortParm"]" 
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           class="text-white text-decoration-none">
                            Prenume
                            @if (ViewData["FirstNameSortParm"]?.ToString() == "firstname_desc")
                            {
                                <i class="bi bi-arrow-up"></i>
                            }
                            else if (ViewData["FirstNameSortParm"]?.ToString() == "firstname")
                            {
                                <i class="bi bi-arrow-down"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index" 
                           asp-route-sortOrder="@ViewData["NameSortParm"]" 
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           class="text-white text-decoration-none">
                            Nume
                            @if (String.IsNullOrEmpty(ViewData["NameSortParm"]?.ToString()))
                            {
                                <i class="bi bi-arrow-up"></i>
                            }
                            else
                            {
                                <i class="bi bi-arrow-down"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index" 
                           asp-route-sortOrder="@ViewData["EmailSortParm"]" 
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           class="text-white text-decoration-none">
                            Email
                            @if (ViewData["EmailSortParm"]?.ToString() == "email_desc")
                            {
                                <i class="bi bi-arrow-up"></i>
                            }
                            else if (ViewData["EmailSortParm"]?.ToString() == "email")
                            {
                                <i class="bi bi-arrow-down"></i>
                            }
                        </a>
                    </th>
                    <th>Telefon</th>
                    <th class="text-center">Client repetat?</th>
                    <th class="text-center">Numar anulari anterioare</th>
                    <th class="text-center">Numar rezervari finalizate</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>
                            <a href="mailto:@item.Email">@item.Email</a>
                        </td>
                        <td>@(item.PhoneNumber ?? "-")</td>
                        <td class="text-center">
                            @if (item.IsRepeatedGuest)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Yes
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-x-circle"></i> No
                                </span>
                            }
                        </td>
                        <td class="text-center">
                            @if (item.TotalPreviousCancellations > 0)
                            {
                                <span class="badge bg-danger">@item.TotalPreviousCancellations</span>
                            }
                            else
                            {
                                <span class="text-muted">0</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (item.TotalPreviousBookings > 0)
                            {
                                <span class="badge bg-info">@item.TotalPreviousBookings</span>
                            }
                            else
                            {
                                <span class="text-muted">0</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-info btn-sm">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>