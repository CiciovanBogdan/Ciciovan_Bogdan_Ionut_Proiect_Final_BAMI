@model BookingCalculationsGrpcService.BookingListReply

@{
    ViewData["Title"] = "Bookings List";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-list-ul"></i> Bookings List
        <span class="badge bg-secondary">gRPC</span>
    </h2>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <i class="bi bi-funnel"></i> Filters
        </div>
        <div class="card-body">
            <form asp-action="BookingsList" method="get" class="row g-3">
                <div class="col-md-6">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" name="includeCanceled"
                               id="includeCanceled" @(ViewBag.IncludeCanceled ? "checked" : "") />
                        <label class="form-check-label" for="includeCanceled">
                            Include Canceled Bookings
                        </label>
                    </div>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Max Results</label>
                    <input type="number" name="maxResults" class="form-control"
                           value="@(ViewBag.MaxResults ?? 50)" min="1" max="500" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i>
            @ViewBag.Error
        </div>
    }
    else if (Model != null)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            Showing <strong>@Model.TotalCount</strong> bookings
        </div>

        @if (Model.Bookings.Count == 0)
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-circle"></i>
                No bookings found matching your criteria.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Booking ID</th>
                            <th>Guests</th>
                            <th>Nights</th>
                            <th>Meal Plan</th>
                            <th>Avg Price/Room</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model.Bookings)
                        {
                            <tr>
                                <td><strong>#@booking.BookingId</strong></td>
                                <td>
                                    <i class="bi bi-people"></i>
                                    @booking.NoOfAdults Adults
                                    @if (booking.NoOfChildren > 0)
                                    {
                                        <span>, @booking.NoOfChildren Children</span>
                                    }
                                </td>
                                <td>
                                    <i class="bi bi-moon"></i>
                                    @(booking.NoOfWeekendNights + booking.NoOfWeekNights) nights
                                    <small class="text-muted">
                                        (@booking.NoOfWeekendNights WE / @booking.NoOfWeekNights WD)
                                    </small>
                                </td>
                                <td>@booking.MealPlan</td>
                                <td><strong>$@booking.AvgPricePerRoom.ToString("F2")</strong></td>
                                <td>
                                    @if (booking.BookingStatus == "Canceled")
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Canceled
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Active
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Menu
        </a>
    </div>
</div>