@model Ciciovan_Bogdan_Ionut_HotelReservations.Models.PredictionRequest

@{
    ViewData["Title"] = "Booking Cancellation Prediction";
}

<h1>Booking Cancellation Prediction</h1>
<h4>Enter booking details to predict cancellation risk</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Guest Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Number of Adults</label>
                            <input asp-for="NoOfAdults" class="form-control" type="number" min="1" max="10" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Number of Children</label>
                            <input asp-for="NoOfChildren" class="form-control" type="number" min="0" max="10" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsRepeatedGuest" class="form-check-input" type="checkbox" />
                            <label asp-for="IsRepeatedGuest" class="form-check-label">Repeated Guest?</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Previous Cancellations</label>
                            <input asp-for="NoPreviousCancellations" class="form-control" type="number" min="0" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Previous Bookings</label>
                            <input asp-for="NoPreviousBookings" class="form-control" type="number" min="0" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Stay Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Weekend Nights</label>
                            <input asp-for="NoOfWeekendNights" class="form-control" type="number" min="0" max="30" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Week Nights</label>
                            <input asp-for="NoOfWeekNights" class="form-control" type="number" min="0" max="30" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Room Type</label>
                        <select asp-for="RoomTypeReserved" class="form-select" asp-items="ViewBag.RoomTypes">
                            <option value="">-- Select Room Type --</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Meal Plan</label>
                        <select asp-for="TypeOfMealPlan" class="form-select" asp-items="ViewBag.MealPlans">
                            <option value="">-- Select Meal Plan --</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Booking Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Lead Time (days)</label>
                            <input asp-for="LeadTime" class="form-control" type="number" min="0" max="365" />
                            <small class="form-text text-muted">Days between booking and arrival</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Avg Price Per Room</label>
                            <input asp-for="AvgPricePerRoom" class="form-control" type="number" step="0.01" min="0" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ArrivalMonth" class="form-label">Arrival Month</label>
                            <select asp-for="ArrivalMonth" class="form-select">
                                <option value="1">January</option>
                                <option value="2">February</option>
                                <option value="3">March</option>
                                <option value="4">April</option>
                                <option value="5">May</option>
                                <option value="6">June</option>
                                <option value="7">July</option>
                                <option value="8">August</option>
                                <option value="9">September</option>
                                <option value="10">October</option>
                                <option value="11">November</option>
                                <option value="12">December</option>
                            </select>
                            <small class="form-text text-muted">Month of arrival (affects seasonality)</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Special Requests</label>
                            <input asp-for="NoOfSpecialRequests" class="form-control" type="number" min="0" max="10" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Market Segment</label>
                            <select asp-for="MarketSegmentType" class="form-select" asp-items="ViewBag.MarketSegments">
                                <option value="">-- Select Segment --</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="RequiredCarParking" class="form-check-input" type="checkbox" />
                            <label asp-for="RequiredCarParking" class="form-check-label">Car Parking Required?</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary btn-lg w-100">
                    <i class="bi bi-magic"></i> Predict Cancellation Risk
                </button>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        @if (ViewBag.Result != null)
        {
            var result = ViewBag.Result as Ciciovan_Bogdan_Ionut_HotelReservations.Models.PredictionResponse;

            var isHighRisk = result.RiskLevel.Contains("High");
            var isMediumRisk = result.RiskLevel.Contains("Medium");
            var isLowRisk = result.RiskLevel.Contains("Low") || result.RiskLevel.Contains("Very Low");

            var headerColor = isHighRisk ? "bg-danger" : (isMediumRisk ? "bg-warning" : "bg-success");
            var textColor = isHighRisk ? "text-danger" : (isMediumRisk ? "text-warning" : "text-success");

            <div class="card">
                <div class="card-header @headerColor text-white">
                    <h4 class="mb-0">Prediction Result</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h2 class="display-4 @textColor">
                            @result.PredictedLabel
                        </h2>
                    </div>

                    <div class="mb-4">
                        <h5>Cancellation Probability</h5>
                        <div class="progress" style="height: 30px;">
                            @{
                                var percentage = (result.Probability * 100);
                                var barColor = isHighRisk ? "bg-danger" : (isMediumRisk ? "bg-warning" : "bg-info");

                                var displayWidth = percentage < 1 ? 5 : percentage;
                            }

                            <div class="progress-bar @barColor"
                                 role="progressbar"
                                 style="width: @(displayWidth.ToString("F0"))%; min-width: 50px;"
                                 aria-valuenow="@(percentage.ToString("F0"))"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                                <strong>@(percentage.ToString("F2"))%</strong>
                            </div>
                        </div>
                        <small class="text-muted">Probability that this booking will be canceled</small>
                    </div>

                    @{
                        var alertClass = isHighRisk ? "alert-danger" : (isMediumRisk ? "alert-warning" : "alert-success");
                        var iconClass = isHighRisk ? "bi-exclamation-triangle-fill" : (isMediumRisk ? "bi-exclamation-circle-fill" : "bi-check-circle-fill");
                    }

                    <div class="alert @alertClass" role="alert">
                        <h5 class="alert-heading">
                            <i class="bi @iconClass"></i>
                            @result.RiskLevel
                        </h5>
                        <hr>
                        <p class="mb-0">@result.Recommendation</p>
                    </div>

                    <div class="card bg-light">
                        <div class="card-body">
                            <h6 class="card-title">Understanding the Results:</h6>
                            <ul class="mb-0">
                                <li><strong>High Risk (&gt;10%):</strong> Strong likelihood of cancellation</li>
                                <li><strong>Medium Risk (3-10%):</strong> Moderate cancellation risk</li>
                                <li><strong>Low Risk (&lt;3%):</strong> Booking likely to proceed</li>
                            </ul>
                            <small class="text-muted mt-2 d-block">
                                <i class="bi bi-info-circle"></i>
                                Arrival month affects prediction due to seasonality patterns.
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card mt-4" style="border: 2px dashed #dee2e6; background: #f8f9fa;">
                <div class="card-body text-center py-5">
                    <i class="bi bi-arrow-down-circle text-secondary" style="font-size: 3rem; opacity: 0.4;"></i>
                    <h5 class="text-secondary mt-3">Aici va apărea predicția</h5>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}