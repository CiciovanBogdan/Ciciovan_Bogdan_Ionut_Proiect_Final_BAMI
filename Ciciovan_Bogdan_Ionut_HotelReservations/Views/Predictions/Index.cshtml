@model Ciciovan_Bogdan_Ionut_HotelReservations.Models.PredictionRequest

@{
    ViewData["Title"] = "Booking Cancellation Prediction";
}

<h1>Booking Cancellation Prediction</h1>
<h4>Enter booking details to predict cancellation risk</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Guest Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="NoOfAdults" class="form-label">Number of Adults</label>
                            <input asp-for="NoOfAdults" class="form-control" type="number" min="1" max="10" value="2" />
                            <span asp-validation-for="NoOfAdults" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="NoOfChildren" class="form-label">Number of Children</label>
                            <input asp-for="NoOfChildren" class="form-control" type="number" min="0" max="10" value="0" />
                            <span asp-validation-for="NoOfChildren" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsRepeatedGuest" class="form-check-input" type="checkbox" />
                            <label asp-for="IsRepeatedGuest" class="form-check-label">Repeated Guest?</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="NoPreviousCancellations" class="form-label">Previous Cancellations</label>
                            <input asp-for="NoPreviousCancellations" class="form-control" type="number" min="0" value="0" />
                            <span asp-validation-for="NoPreviousCancellations" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="NoPreviousBookings" class="form-label">Previous Bookings</label>
                            <input asp-for="NoPreviousBookings" class="form-control" type="number" min="0" value="0" />
                            <span asp-validation-for="NoPreviousBookings" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Stay Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="NoOfWeekendNights" class="form-label">Weekend Nights</label>
                            <input asp-for="NoOfWeekendNights" class="form-control" type="number" min="0" max="30" value="2" />
                            <span asp-validation-for="NoOfWeekendNights" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="NoOfWeekNights" class="form-label">Week Nights</label>
                            <input asp-for="NoOfWeekNights" class="form-control" type="number" min="0" max="30" value="3" />
                            <span asp-validation-for="NoOfWeekNights" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RoomTypeReserved" class="form-label">Room Type</label>
                        <select asp-for="RoomTypeReserved" class="form-select" asp-items="ViewBag.RoomTypes">
                            <option value="">-- Select Room Type --</option>
                        </select>
                        <span asp-validation-for="RoomTypeReserved" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TypeOfMealPlan" class="form-label">Meal Plan</label>
                        <select asp-for="TypeOfMealPlan" class="form-select" asp-items="ViewBag.MealPlans">
                            <option value="">-- Select Meal Plan --</option>
                        </select>
                        <span asp-validation-for="TypeOfMealPlan" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Booking Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="LeadTime" class="form-label">Lead Time (days)</label>
                            <input asp-for="LeadTime" class="form-control" type="number" min="0" max="365" value="30" />
                            <span asp-validation-for="LeadTime" class="text-danger"></span>
                            <small class="form-text text-muted">Days between booking and arrival</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="AvgPricePerRoom" class="form-label">Avg Price Per Room</label>
                            <input asp-for="AvgPricePerRoom" class="form-control" type="number" step="0.01" min="0" value="100.00" />
                            <span asp-validation-for="AvgPricePerRoom" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="NoOfSpecialRequests" class="form-label">Special Requests</label>
                            <input asp-for="NoOfSpecialRequests" class="form-control" type="number" min="0" max="10" value="0" />
                            <span asp-validation-for="NoOfSpecialRequests" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="MarketSegmentType" class="form-label">Market Segment</label>
                            <select asp-for="MarketSegmentType" class="form-select" asp-items="ViewBag.MarketSegments">
                                <option value="">-- Select Segment --</option>
                            </select>
                            <span asp-validation-for="MarketSegmentType" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="RequiredCarParking" class="form-check-input" type="checkbox" />
                            <label asp-for="RequiredCarParking" class="form-check-label">Car Parking Required?</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary btn-lg w-100">
                    <i class="bi bi-magic"></i> Predict Cancellation Risk
                </button>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        @if (ViewBag.Result != null)
        {
            var result = ViewBag.Result as Ciciovan_Bogdan_Ionut_HotelReservations.Models.PredictionResponse;
            
            <div class="card">
                <div class="card-header @(result.PredictedLabel == "Canceled" ? "bg-danger" : "bg-success") text-white">
                    <h4 class="mb-0">Prediction Result</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h2 class="display-4 @(result.PredictedLabel == "Canceled" ? "text-danger" : "text-success")">
                            @result.PredictedLabel
                        </h2>
                    </div>

                    <div class="mb-4">
                        <h5>Cancellation Probability</h5>
                        <div class="progress" style="height: 30px;">
                            <div class="progress-bar @(result.Probability > 0.7 ? "bg-danger" : result.Probability > 0.4 ? "bg-warning" : "bg-success")" 
                                 role="progressbar" 
                                 style="width: @((result.Probability * 100).ToString("F0"))%"
                                 aria-valuenow="@((result.Probability * 100).ToString("F0"))" 
                                 aria-valuemin="0" 
                                 aria-valuemax="100">
                                <strong>@((result.Probability * 100).ToString("F1"))%</strong>
                            </div>
                        </div>
                    </div>

                    <div class="alert @(result.RiskLevel == "High Risk" ? "alert-danger" : result.RiskLevel == "Medium Risk" ? "alert-warning" : "alert-success")" role="alert">
                        <h5 class="alert-heading">
                            <i class="bi @(result.RiskLevel == "High Risk" ? "bi-exclamation-triangle-fill" : result.RiskLevel == "Medium Risk" ? "bi-exclamation-circle-fill" : "bi-check-circle-fill")"></i>
                            @result.RiskLevel
                        </h5>
                        <hr>
                        <p class="mb-0">@result.Recommendation</p>
                    </div>

                    <div class="card bg-light">
                        <div class="card-body">
                            <h6 class="card-title">Understanding the Results:</h6>
                            <ul class="mb-0">
                                <li><strong>High Risk (&gt;70%):</strong> Strong likelihood of cancellation</li>
                                <li><strong>Medium Risk (40-70%):</strong> Moderate cancellation risk</li>
                                <li><strong>Low Risk (&lt;40%):</strong> Booking likely to proceed</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-info-circle" style="font-size: 4rem; color: #0d6efd;"></i>
                    <h4 class="mt-3">Ready to Predict</h4>
                    <p class="text-muted">Fill in the booking details on the left and click "Predict Cancellation Risk" to see the AI-powered prediction.</p>
                    
                    <div class="alert alert-info mt-4" role="alert">
                        <h6 class="alert-heading">How it works:</h6>
                        <p class="mb-0 small">Our ML.NET model analyzes booking patterns from thousands of historical reservations to predict cancellation probability based on guest behavior, booking characteristics, and stay details.</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}